<div class="row">
  <div class="col-sm-12">
    <h3>Your Babies</h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if @babies %>
      <% @babies.each do |baby| %>
        <h3><a href="/babies/<%= baby.id %>"><%= baby.name %></a></h3>
      <% end %>
    <% else %>
      <p>You have no babies registered.</p>
    <% end %>
  <h6><a href="/babies/new">Add a new baby</a></h6>
  </div>
</div>
