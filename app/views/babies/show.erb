<div class="row">
  <div class="col-sm-12">
    <h3 class="text-center"><%= @baby.name %></h3>
    <div class="form-group">
      <a href="/babies/<%= @baby.id %>/events/new"><button type="button" class="form-control btn btn-primary big-button">New Event</button></a>
    </div>
    <div class="form-group">
      <a href="/babies/<%= @baby.id %>/events"><button type="button" class="form-control btn btn-primary big-button">View Latest Events</button></a>
    </div>
    <form method="POST" action="/babies/<%= @baby.id %>/delete" onsubmit="return confirm('Do you really want to do this? It is permanent!');">
      <input type="hidden" name="_method" value="delete">
      <div class="form-group">
        <input type="submit" class="form-control btn btn-danger big-button" value="Delete <%= @baby.name %>">
      </div>
    </form>
  </div>
</div>
